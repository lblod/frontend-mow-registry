{{! @glint-nocheck: not typesafe yet }}
<AuDataTable
  @content={{@templates}}
  @fields="Description"
  @noDataMessage={{t "road-sign-concept.crud.no-instruction"}}
  as |s|
>
  <s.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box" as |Group|>
        <Group>
          <AuHeading @level="2" @skin="3">
            {{t "utility.instructions"}}
          </AuHeading>
        </Group>
        <Group>
          <AuButton
            @disabled={{@isAddingInstructions}}
            {{on "click" @addInstruction}}
          >
            {{t "utility.add-instruction"}}
          </AuButton>
        </Group>
      </AuToolbar>
    </menu.general>
  </s.menu>
  <s.content as |c|>
    <c.header>
      <th class="data-table__header-title">
        {{t "utility.description"}}
      </th>
      <th>
        <span class="au-u-hidden-visually">
          {{t "main-sign.crud.delete"}}
        </span>
      </th>
      <th>
        <span class="au-u-hidden-visually">
          {{t "main-sign.crud.edit"}}
        </span>
      </th>

    </c.header>
    <c.body as |template|>
      <td>
        <p class="max-w-prose">
          {{template.value}}
        </p>
      </td>
      <td class="w-px au-u-padding-right-small">
        <AuButton
          @icon="pencil"
          @skin="secondary"
          @hideText={{true}}
          @disabled={{@isAddingInstructions}}
          {{on "click" (fn @editInstruction template)}}
        >
          {{t "utility.edit"}}
        </AuButton>
      </td>
      <td class="w-px au-u-padding-right-small">
        <AuButton
          @icon="bin"
          @alert={{true}}
          @disabled={{@isAddingInstructions}}
          @skin="secondary"
          @hideText={{true}}
          {{on "click" (fn @removeTemplate template)}}
        >
          {{t "utility.delete"}}
        </AuButton>
      </td>
    </c.body>
  </s.content>
</AuDataTable>