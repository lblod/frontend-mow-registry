<PowerSelect
  @allowClear={{true}}
  @searchEnabled={{true}}
  @loadingMessage={{t "utility.loading"}}
  @noMatchesMessage={{t "utility.no-result"}}
  @searchMessage={{t "utility.search-placeholder"}}
  @searchField="label"
  @search={{perform this.loadIconCatalogTask}}
  @options={{this.icons}}
  @selected={{@selected}}
  @onChange={{@onChange}}
  @triggerId={{@id}}
  {{did-insert this.didInsert}}
  {{! TODO: refactor did-insert}}
  {{!template-lint-disable no-at-ember-render-modifiers}}
  as |icon|
>
  {{icon.label}}
</PowerSelect>