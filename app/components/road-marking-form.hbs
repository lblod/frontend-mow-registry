{{#let
  (changeset @roadMarkingConcept this.RoadMarkingConceptValidations)
  as |changeset|
}}
  <BreadcrumbsItem as |linkClass|>
    <LinkTo
      @route="road-marking-concepts.edit"
      @model={{@roadMarkingConcept.id}}
      class={{linkClass}}
    >
      {{#if @roadMarkingConcept.isNew}}
        {{t "road-marking-concept.crud.new"}}
      {{else}}
        {{@roadMarkingConcept.label}}
      {{/if}}
    </LinkTo>
  </BreadcrumbsItem>

  <AuToolbar @border="bottom" @size="large" as |Group|>
    <Group>
      <AuHeading @skin="2">
        {{#if @roadMarkingConcept.isNew}}
          {{t "road-marking-concept.crud.new"}}
        {{else}}
          {{t "road-marking-concept.crud.edit"}}
        {{/if}}
      </AuHeading>
    </Group>
  </AuToolbar>
  <div class="au-c-body-container au-c-body-container--scroll">
    <div class="au-o-box">
      <div class="au-o-grid">
        <div class="au-o-grid__item au-u-2-3@medium">
          <form
            class="au-c-form"
            id="edit-road-marking-concept-form"
            novalidate
          >
            {{#let changeset.error.image as |isInvalid|}}
              <AuFormRow>
                <ImageInput
                  @oldImage={{@roadMarkingConcept.image.file.downloadLink}}
                  @error={{isInvalid}}
                  @setImage={{(fn this.setImage changeset)}}
                />
              </AuFormRow>
            {{/let}}
            {{#let changeset.error.label as |isInvalid|}}
              <AuFormRow>
                <AuLabel
                  @error={{isInvalid}}
                  for="road-marking-concept-code"
                  @required={{true}}
                  @requiredLabel={{t "utility.required"}}
                >
                  {{t "road-marking-concept.attr.code"}}&nbsp;
                </AuLabel>
                <AuInput
                  @error={{isInvalid}}
                  id="road-marking-concept-code"
                  required="required"
                  @value={{changeset.label}}
                  {{on
                    "input"
                    (fn this.setRoadMarkingConceptValue changeset "label")
                  }}
                />
                {{#if isInvalid}}
                  <AuHelpText @error={{true}}>
                    {{t "utility.field-required"}}
                  </AuHelpText>
                {{/if}}
              </AuFormRow>
            {{/let}}
            {{#let changeset.error.definition as |isInvalid|}}
              <AuFormRow>
                <AuLabel
                  @error={{isInvalid}}
                  for="definition"
                  @required={{true}}
                  @requiredLabel={{t "utility.required"}}
                >
                  {{t "road-marking-concept.attr.definition"}}&nbsp;
                </AuLabel>
                <AuTextarea
                  @error={{isInvalid}}
                  @width="block"
                  class="u-min-h-20"
                  id="definition"
                  required="required"
                  @value={{changeset.definition}}
                  {{on
                    "input"
                    (fn this.setRoadMarkingConceptValue changeset "definition")
                  }}
                />
                {{#if isInvalid}}
                  <AuHelpText @error={{true}}>
                    {{t "utility.field-required"}}
                  </AuHelpText>
                {{/if}}
              </AuFormRow>
            {{/let}}
            {{#let changeset.error.meaning as |isInvalid|}}
              <AuFormRow>
                <AuLabel
                  @error={{isInvalid}}
                  for="meaning"
                  @required={{true}}
                  @requiredLabel={{t "utility.required"}}
                >
                  {{t "road-marking-concept.attr.meaning"}}&nbsp;
                </AuLabel>
                <AuTextarea
                  @error={{isInvalid}}
                  @width="block"
                  class="u-min-h-20"
                  id="meaning"
                  required="required"
                  @value={{changeset.meaning}}
                  {{on
                    "input"
                    (fn this.setRoadMarkingConceptValue changeset "meaning")
                  }}
                />
                {{#if isInvalid}}
                  <AuHelpText @error={{true}}>
                    {{t "utility.field-required"}}
                  </AuHelpText>
                {{/if}}
              </AuFormRow>
            {{/let}}
          </form>
        </div>
      </div>
    </div>
  </div>

  <AuToolbar @border="top" @size="large" as |Group|>
    <Group>
      <AuButtonGroup>
        <AuButton
          @disabled={{or changeset.isPristine this.isSaving}}
          @loading={{this.isSaving}}
          {{on "click" (perform this.editRoadMarkingConceptTask changeset)}}
        >
          {{t "utility.save"}}
        </AuButton>
        {{#if @roadMarkingConcept.isNew}}
          <LinkTo
            @route="road-marking-concepts.index"
            class="au-c-button au-c-button--secondary"
          >
            {{t "utility.cancel"}}
          </LinkTo>
        {{else}}
          <LinkTo
            @route="road-marking-concepts.road-marking-concept"
            @model={{changeset.id}}
            class="au-c-button au-c-button--secondary"
          >
            {{t "utility.cancel"}}
          </LinkTo>
        {{/if}}
      </AuButtonGroup>
    </Group>
  </AuToolbar>
{{/let}}