<ReactiveTable
  @content={{@content}}
  @noDataMessage={{t "icon-catalog.crud.no-data"}}
  @page={{@page}}
  @sort={{@sort}}
  @pageSize={{@pageSize}}
  @onPageChange={{@onPageChange}}
  @onSortChange={{@onSortChange}}
>
  <:menu>
    {{yield to="menu"}}
  </:menu>
  <:header as |header|>
    <th>
      {{t "icon-catalog.attr.image"}}
    </th>
    <header.Sortable
      @field="label"
      @label={{t "icon-catalog.attr.label"}}
    />
    <th>{{t "icon-catalog.crud.use-in-codelist"}}</th>
    <th></th>
  </:header>
  <:body as |icon|>
    <td>
      <img src={{icon.image.file.downloadLink}} alt={{icon.label}} height="50" />
    </td>
    <td>
      {{icon.label}}
    </td>
    <td>
      {{icon.inScheme.length}}
    </td>
    <td>
      {{yield icon to="rowAction"}}
    </td>
  </:body>
</ReactiveTable>