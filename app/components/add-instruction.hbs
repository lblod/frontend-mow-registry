<div class="au-o-grid__item au-u-2-5@medium">
  <div
    class="au-c-body-container au-c-action-sidebar"
    {{auto-focus ".au-c-action-sidebar__header"}}
  >
    <div class="au-o-box au-c-action-sidebar__header" tabindex="0">
      <AuToolbar class="au-u-margin-bottom-small">
        <AuToolbarGroup>
          <AuHeading @level="2" @skin="3">
            {{t "utility.addInstruction"}}
          </AuHeading>
        </AuToolbarGroup>
        <button
          type="button"
          class="au-c-close au-c-close--large"
          {{on "click" @toggleInstructions}}
        >
          <AuIcon @icon="cross" @size="large" />
          <span class="au-u-hidden-visually">
            {{t "utility.close"}}
          </span>
        </button>
      </AuToolbar>

    </div>
    <div class="au-c-body-container au-c-body-container--scroll">
      <div class="au-o-box au-c-form">
        <p>
          <AuLabel for="textarea-description">{{t "utility.description"}}</AuLabel>
          <AuTextarea id="textarea-description" @width="block" @value={{@newDescription}} />
        </p>
        <AuButtonGroup>
          {{#if @editedTemplate}}
            <AuButton {{on "click" (perform @updateInstruction)}}>
              {{t "utility.save"}}
            </AuButton>
          {{else}}
            <AuButton {{on "click" @addInstruction}}>
              {{t "utility.save"}}
            </AuButton>
          {{/if}}
          <AuButton @skin="secondary" {{on "click" @resetInstruction}}>
            {{t "utility.cancel"}}
          </AuButton>
        </AuButtonGroup>
      </div>
    </div>
  </div>
</div>
