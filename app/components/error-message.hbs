{{#if @error}}
  <AuHelpText @error={{true}}>
    {{t @error.message}}
  </AuHelpText>
{{/if}}
{{#if @warning}}
 {{#if @warning.messageArray}}
    {{#each @warning.messageArray as |message|}}
      <AuHelpText @warning={{true}}>
        {{t message}}
      </AuHelpText>
    {{/each}}
  {{else}}
    <AuHelpText @warning={{true}}>
      {{t @warning.message}}
    </AuHelpText>
  {{/if}}
{{/if}}