<DraggableObject @tagName="tr" @content={{@sign}} @isSortable={{true}} class="au-c-table__row--centered">
  <td class="w-px au-u-padding-right-small">
    <AuButton @icon="drag" @skin="tertiary" @hideText={{true}} class="au-c-button--drag">
      {{t "utility.drag"}}
    </AuButton>
  </td>
  <td>
    <div class="au-o-flex au-o-flex--center">
      <img src={{@sign.image}} alt="" role="presentation" class="au-c-thumbnail au-c-thumbnail--table">
      <span>
        {{this.label}}
      </span>
    </div>
  </td>
  <td class="w-px au-u-padding-right-small">
    <AuButton
      @icon="bin"
      @alert={{true}}
      @skin="secondary"
      @hideText={{true}}
      {{on "click" (fn @removeSign @sign)}}
    >
      {{t "utility.delete"}}
    </AuButton>
  </td>
</DraggableObject>
