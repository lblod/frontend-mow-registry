<SearchTables::TrafficMeasure
  @content={{this.model}}
  @pageSize={{this.size}}
  @page={{this.page}}
  @sort={{this.sort}}
  @onPageChange={{this.onPageChange}}
  @onSortChange={{this.onSortChange}}
>
  <:menu>
    <AuToolbar class="au-o-box" as |Group|>
      <Group>
        <AuHeading @skin="2">
          {{t "traffic-measure-concept.name"}}
        </AuHeading>
      </Group>
      <Group class="au-c-toolbar__group--center">
        <div>
          <AuInput
            value={{this.label}}
            placeholder={{t "traffic-measure-concept.crud.label-filter-placeholder"}}
            @icon="search"
            @iconAlignment="right"
            {{on "input" (perform this.updateSearchFilterTask "label")}}
          />
          <AuInput
            value={{this.templateFilter}}
            placeholder={{t "traffic-measure-concept.crud.text-filter-placeholder"}}
            @icon="search"
            @iconAlignment="right"
            {{on "input" (perform this.updateSearchFilterTask "templateFilter")}}
          />
        </div>
        <AuLink @route="traffic-measure-concepts.new" @skin="button">
          {{t "traffic-measure-concept.crud.new"}}
        </AuLink>
      </Group>
    </AuToolbar>
  </:menu>
</SearchTables::TrafficMeasure>