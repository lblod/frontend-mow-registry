<SearchTables::TrafficMeasure
  @content={{this.model}}
  @pageSize={{this.size}}
  @page={{this.page}}
  @sort={{this.sort}}
  @onPageChange={{this.onPageChange}}
  @onSortChange={{this.onSortChange}}
>
  <:menu>
    <AuToolbar class="au-o-box" as |Group|>
      <Group>
        <AuHeading @skin="2">
          {{t "traffic-measure-concept.name"}}
        </AuHeading>
      </Group>
      <Group class="au-c-toolbar__group--center">
        {{! Copied from the AuDataTable::TextSearch component since that doesn't support calling actions on input}}
        <div class="au-c-data-table__search traffic-light-code-search">
          <AuInput
            @value={{this.label}}
            placeholder={{t "traffic-measure-concept.attr.code"}}
            @icon="search"
            @iconAlignment="right"
            {{on "input" (perform this.updateSearchFilterTask "label")}}
          />
        </div>
        <LinkTo class="au-c-button" @route="traffic-measure-concepts.new">
          {{t "traffic-measure-concept.crud.new"}}
        </LinkTo>
      </Group>
    </AuToolbar>
  </:menu>
  <:rowAction as |trafficMeasureConcept|>
    <LinkTo
      class="au-c-link"
      @route="traffic-measure-concepts.edit"
      @model={{trafficMeasureConcept.id}}
    >
      {{t "traffic-measure-concept.crud.edit"}}
    </LinkTo>
  </:rowAction>
</SearchTables::TrafficMeasure>