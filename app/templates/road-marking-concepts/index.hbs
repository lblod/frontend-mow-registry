<AuDataTable
  @content={{this.model.roadMarkingConcepts}}
  @fields="Image Meaning Code"
  @noDataMessage={{t "roadMarkingConcept.crud.noData"}}
  @size={{this.size}}
  @page={{this.page}}
  @sort={{this.sort}} as |s|
>
  <s.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            {{t "roadMarkingConcept.name"}}
          </AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup class="au-c-toolbar__group--center">
          {{! Copied from the AuDataTable::TextSearch component since that doesn't support calling actions on input}}
          <div class="au-c-data-table__search road-marking-code-search">
            <input
              value={{this.code}}
              placeholder={{t "roadMarkingConcept.crud.codeFilter"}}
              class="au-c-input au-c-input--block"
              {{on "input" (perform this.updateSearchFilterTask "code")}}
            />
            <span class="au-c-data-table__search-icon">
              <AuIcon @icon="search" @size="large" />
            </span>
          </div>
          <div class="au-c-data-table__search road-marking-meaning-search">
            <input
              value={{this.meaning}}
              placeholder={{t "roadMarkingConcept.crud.meaningFilter"}}
              class="au-c-input au-c-input--block"
              {{on "input" (perform this.updateSearchFilterTask "meaning")}}
            />
            <span class="au-c-data-table__search-icon">
              <AuIcon @icon="search" @size="large" />
            </span>
          </div>
          <LinkTo class="au-c-button" @route="road-marking-concepts.new">
            {{t "roadMarkingConcept.crud.new"}}
          </LinkTo>
        </AuToolbarGroup>
      </AuToolbar>
    </menu.general>
  </s.menu>
  <s.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="roadMarkingConceptCode"
        @currentSorting={{this.sort}}
        @label={{t "roadMarkingConcept.attr.code"}}
      />
      <th>
        {{t "roadMarkingConcept.attr.imageHeader"}}
      </th>
      <th>
        {{t "roadMarkingConcept.attr.meaning"}}
      </th>
      <th>
        {{t "roadMarkingConcept.attr.valid"}}
      </th>
      <th></th>
    </c.header>
    <c.body as |roadMarkingConcept|>
      <td>
        {{roadMarkingConcept.roadMarkingConceptCode}}
      </td>
      <td>
        <img
          class="au-c-thumbnail"
          src={{roadMarkingConcept.image}}
          alt=""
          role="presentation"
        />
      </td>
      <td>
        {{roadMarkingConcept.meaning}}
      </td>
      <td>
        {{#if roadMarkingConcept.valid}}
          {{t "utility.yes"}}
        {{else}}
          {{t "utility.no"}}
        {{/if}}
      </td>
      <td>
        <LinkTo
          class="au-c-link"
          @route="road-marking-concepts.road-marking-concept"
          @model={{roadMarkingConcept.id}}
        >
          {{t "utility.view"}}
        </LinkTo>
      </td>
    </c.body>
  </s.content>
</AuDataTable>