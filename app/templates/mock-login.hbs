<div class="au-c-main-container" itemprop="mainContentOfPage">
  <div class="au-c-main-container__content au-c-main-container__content--scroll">
    <main id="content">
      <div class="au-o-region-large">
        <div class="au-o-layout">
          <AuHeading @skin="4" class="au-u-margin-bottom-small">{{t 'auth.mock.title'}}</AuHeading>
          <MockLogin as |login|>
            {{#if login.isLoading}}
              <AuLoader />
            {{else}}
              {{#if login.errorMessage}}
                {{login.errorMessage}}
              {{/if}}
              <ul>
              {{#each this.model as |account|}}
                <li>
                  <div
                    class="au-o-box au-o-box--small au-c-card au-u-margin-bottom-small"
                  >
                    <AuButton
                      @skin="tertiary"
                      {{on
                        "click"
                        (fn login.login account.id (get account.user.groups "0.id"))
                      }}
                    >
                      <strong>
                        {{account.user.fullName}}
                        -&nbsp;
                      </strong>
                    </AuButton>
                  </div>
                </li>
              {{/each}}
              </ul>
            {{/if}}
          </MockLogin>
        </div>
      </div>
    </main>
  </div>
</div>