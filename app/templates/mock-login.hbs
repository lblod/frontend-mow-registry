<div class='au-c-main-container' itemprop='mainContentOfPage'>
  <div
    class='au-c-main-container__content au-c-main-container__content--scroll'
  >
    <main id='content'>
      <div class='au-o-region-large'>
        <div class='au-o-layout'>
          <AuHeading @skin='4' class='au-u-margin-bottom-small'>{{t
              'auth.mock.title'
            }}</AuHeading>
          <MockLogin as |login|>
            {{#if login.isLoading}}
              <AuLoader @hideMessage={{true}} @centered={{false}}>
                {{t "utility.loading"}}
              </AuLoader>
            {{else}}
              {{#if login.errorMessage}}
                {{login.errorMessage}}
              {{/if}}
              <ul>
                {{#each this.model as |entity|}}
                  <li>
                    <div
                      class='au-o-box au-o-box--small au-c-card au-u-margin-bottom-small'
                    >
                      <AuButton
                        @skin='link'
                        {{on
                          'click'
                          (fn login.login entity.account.id entity.group.id)
                        }}
                      >
                        <strong>
                          {{entity.user.fullName}}
                          -&nbsp;
                        </strong>
                      </AuButton>
                    </div>
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          </MockLogin>
        </div>
      </div>
    </main>
  </div>
</div>