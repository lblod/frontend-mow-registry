<SearchTables::TrafficLight
  @content={{this.model.trafficLightConcepts}}
  @pageSize={{this.size}}
  @page={{this.page}}
  @sort={{this.sort}}
  @onPageChange={{this.onPageChange}}
  @onSortChange={{this.onSortChange}}
>
  <:menu>
    <AuToolbar class="au-o-box" as |Group|>
      <Group>
        <AuHeading @skin="2">
          {{t "traffic-light-concept.name"}}
        </AuHeading>
      </Group>
      <Group class="au-c-toolbar__group--center">
        {{! Copied from the AuDataTable::TextSearch component since that doesn't support calling actions on input}}
        <div class="au-c-data-table__search traffic-light-code-search">
          <AuInput
            @value={{this.label}}
            placeholder={{t "traffic-light-concept.crud.code-filter"}}
            @icon="search"
            @iconAlignment="right"
            {{on "input" (perform this.updateSearchFilterTask "code")}}
          />
        </div>
        <div class="au-c-data-table__search traffic-light-meaning-search">
          <AuInput
            @value={{this.meaning}}
            placeholder={{t "traffic-light-concept.crud.meaning-filter"}}
            @icon="search"
            @iconAlignment="right"
            {{on "input" (perform this.updateSearchFilterTask "meaning")}}
          />
        </div>
        <LinkTo class="au-c-button" @route="traffic-light-concepts.new">
          {{t "traffic-light-concept.crud.new"}}
        </LinkTo>
      </Group>
    </AuToolbar>
  </:menu>
  <:rowAction as |trafficLightConcept|>
    <LinkTo
      class="au-c-link"
      @route="traffic-light-concepts.traffic-light-concept"
      @model={{trafficLightConcept.id}}
    >
      {{t "utility.view"}}
    </LinkTo>
  </:rowAction>
</SearchTables::TrafficLight>